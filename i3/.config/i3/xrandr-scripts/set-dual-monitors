#     --output DP-1 --mode 1920x1080 -r 119.98 \
#     --output HDMI-1 --mode 1920x1080 --primary --pos 1920x0

# xrandr --output DP-1 --mode 1920x1080 -r 119.98 \
#     --output HDMI-1 --mode 1920x1080 --primary --right-of DP-1

# xrandr --output DP-1 --auto --output HDMI-1 --primary --right-of DP-1

