#!/usr/bin/env bash
# HDMI-0 3840x2160
# DP-4 1920x1080

if xrandr -q | grep 'HDMI-1 connected primary' > /dev/null; then
    echo 'In dual monitor mode, setting single monitor mode'

    xrandr --dpi 192 --fb 3840x2160 \
        --output DP-1 --scale 2x2 --primary --mode 1920x1080 -r 119.98 \
        --output HDMI-1 --off
else
    echo 'In single monitor mode, setting dual mode.'

    xrandr --dpi 192 --fb 7680x2160 \
        --output DP-1 --scale 2x2 --mode 1920x1080 -r 119.98 \
        --output HDMI-1 --mode 3840x2160 --primary --pos 3840x0
fi

